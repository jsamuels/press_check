<div>
	<h4><%= link_to "Status", {:controller => 'devices', :action => 'index'} %></h4>
		<div>
			<!-- locations -->	
			<%	unless @locations.nil? %>
				<% @locations.each do |location| %>
					<%= link_to location.name.gsub(/RNS /, ''), {:controller => 'devices', :action => 'location', :location => location.id } %><br/>
				<% end %>
			<% end %>
			<br/>
			<br/>
			<p class="tab-links">
				<br/><%= link_to 'All', {:controller => 'devices', :action => 'location' }, :style => "color: #009;" %> 
			</p>
		</div>
</div>